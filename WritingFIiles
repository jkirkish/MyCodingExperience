package ReadingWriting;


import java.io.*;


public class Write {

	public static void main(String[] args) throws IOException{
		// TODO Auto-generated method stub
		
		//step 1 Open 
		
		FileOutputStream input = new FileOutputStream("C:/Users/jk/workspace/Exceptions/src/ReadingWriting/Input");

		//Step 2 write the content as bytes
		String myName = "Kirkish, Joseph";
		byte[] containerBytes = myName.getBytes();
		input.write(containerBytes);
		
		//step 3: closing it now
		input.close();
		
		
	}
 }
