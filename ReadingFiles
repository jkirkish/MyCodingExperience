package ReadingWriting;

import java.io.*;


public class read {

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		
		//Ste-1: OPen Stream
		FileInputStream input = new FileInputStream("C:/Users/jk/workspace/Exceptions/src/ReadingWriting/Input");
		int takeIn;
		
		//step 2: Read file
		while((takeIn = input.read()) != -1 ){
			
			System.out.print((char)takeIn);
		}
        //Step 3: closing
		
		input.close();
	}

}
